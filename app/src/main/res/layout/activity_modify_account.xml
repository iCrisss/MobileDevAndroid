<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cristiansu.buyselllab3.ModifyAccountActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp"
        android:id="@+id/inputNameMyAccount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/inputNameMyAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/inputNewPassword" />

    <TextView
        android:text="New password: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputNameMyAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/textNewPassword" />

    <Button
        android:text="Update account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputNewPassword"
        android:layout_marginTop="82dp"
        android:id="@+id/buttonUpdateAccountInfo" />

    <Button
        android:text="Delete account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonUpdateAccountInfo"
        android:layout_toEndOf="@+id/inputNewPassword"
        android:id="@+id/buttonDeleteAccount" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonDeleteAccount"
        android:layout_alignStart="@+id/buttonDeleteAccount"
        android:layout_marginBottom="27dp"
        android:id="@+id/buttonBackToMyAccount" />

    <TextView
        android:text="New name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textNewName"
        android:layout_below="@+id/textCurrentName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=" Current name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCurrentName"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMyAccountCurrentName"
        android:layout_alignBaseline="@+id/textCurrentName"
        android:layout_alignBottom="@+id/textCurrentName"
        android:layout_toRightOf="@+id/textNewPassword"
        android:layout_toEndOf="@+id/textNewPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
</RelativeLayout>
